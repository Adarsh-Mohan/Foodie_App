<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".activity.CartActivity"
    >

    <ImageView
        android:id="@+id/imgSplash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_action_success"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Order has been successfully placed"
        android:layout_below="@+id/imgSplash"
        android:fontFamily="@font/yellow"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/foodiecolour"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:background="@drawable/curvededittext"
        android:backgroundTint="@color/foodiecolour"
        android:id="@+id/btnOK"
        android:textColor="#ffffff"
        android:fontFamily="@font/yellow"
        android:textSize="29sp"
        android:layout_below="@+id/imgSplash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />


</RelativeLayout>