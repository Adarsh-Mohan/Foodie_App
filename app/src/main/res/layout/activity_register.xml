<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ffffff"
tools:context=".activity.LoginActivity"
    >
<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorPrimary"
    app:titleTextColor="@color/foodiecolour"
    android:id="@+id/toolbar"
    />

<ImageView
    android:id="@+id/imgLogo"
    android:layout_width="match_parent"
    android:layout_below="@+id/toolbar"
    android:layout_height="126dp"
    android:src="@drawable/applogo"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="4dp"
    />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:layout_below="@+id/imgLogo"
    android:fontFamily="@font/yellow"
    android:textStyle="bold"
    android:paddingLeft="178dp"
    android:textColor="@color/foodiecolour"
    android:textSize="40sp"
    />
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:layout_below="@+id/imgLogo"
        android:inputType="text"
        android:maxLength="20"
        android:drawableLeft="@drawable/ic_name"
        android:maxLines="1"
        android:hint="Name"
        android:autofillHints="Name"
        android:backgroundTint="#F2F2F2"
        android:background="@drawable/curvededittext"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:layout_below="@+id/etName"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:hint="Email Address"
        android:backgroundTint="#F2F2F2"
        android:drawableLeft="@drawable/ic_email"
        android:background="@drawable/curvededittext"
        />
<EditText
    android:id="@+id/etMobilenumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:padding="6dp"
    android:layout_below="@+id/etEmail"
    android:inputType="phone"
    android:maxLength="10"
    android:drawableLeft="@drawable/ic_phone"
    android:maxLines="1"
    android:hint="Mobile Number(10 digits)"
    android:autofillHints="Mobile Number"
    android:backgroundTint="#F2F2F2"
    android:background="@drawable/curvededittext"/>
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:layout_below="@+id/etMobilenumber"
        android:inputType="textImeMultiLine"
        android:drawableLeft="@drawable/ic_address"
        android:hint="Delivery Address"
        android:autofillHints="Mobile Number"
        android:backgroundTint="#F2F2F2"
        android:background="@drawable/curvededittext"/>
<EditText
    android:id="@+id/etNewpass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:padding="6dp"
    android:layout_below="@+id/etAddress"
    android:inputType="textPassword"
    android:maxLength="6"
    android:maxLines="1"
    android:hint="Password"
    android:backgroundTint="#F2F2F2"
    android:drawableLeft="@drawable/ic_lock"
    android:background="@drawable/curvededittext"
    />
    <EditText
        android:id="@+id/etConfirmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="6dp"
        android:layout_below="@+id/etNewpass"
        android:inputType="textPassword"
        android:maxLength="6"
        android:maxLines="1"
        android:hint="Confirm Password"
        android:backgroundTint="#F2F2F2"
        android:drawableLeft="@drawable/ic_lock"
        android:background="@drawable/curvededittext"
        />
<Button

    android:id="@+id/btnRegister"
    android:layout_width="240dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_marginTop="18dp"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:layout_below="@+id/etConfirmpass"
    android:backgroundTint="@color/foodiecolour"
    android:text="Register"
    android:textStyle="bold"
    android:textColor="	#ffffff"
    android:fontFamily="@font/yellow"
    android:textSize="25sp"
    android:background="@drawable/curvededittext"

    />


</RelativeLayout>